<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <label>Key:</label>
      <p>
        <code><%= @key %></code>
      </p>
      <label>Value:</label>
      <p>
        <code><%= @value %></code>
      </p>
      <label>Expires at:</label>
      <p>
        <code><%= expired_at(@entry&.expires_at) %></code>
      </p>
      <label>Size:</label>
      <p>
        <code><%= number_to_human_size(@entry&.size, locale: :en) %></code>
      </p>
      <p>
        <%= link_to 'Delete', destroy_key_path(key: @key), method: :delete, data: {confirm: 'Are you sure ?'}, title: "Delete #{@key}", class: 'btn btn-sm btn-danger w-100 mb-2' %>
        <%= link_to 'Back', root_path, title: 'View keys', class: 'btn btn-sm btn-primary w-100' %>
      </p>
    </div>
  </div>
</div>